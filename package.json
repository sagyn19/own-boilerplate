{
  "name": "express-shop-react",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server/server.js",
    "server": "nodemon server/server.js",
    "client": "yarn --cwd client run start",
    "client:build": "cross-env NODE_ENV=production yarn --cwd client run build",
    "client:install": "yarn --cwd client install",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn run server\" \"yarn run client\" ",
    "heroku-postbuild": "yarn run client:install && yarn run client:build"
  },
  "dependencies": {
    "autoprefixer": "^10.3.2",
    "axios": "^0.21.1",
    "concurrently": "^6.2.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^2.0.1",
    "nodemon": "^2.0.12",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "react-redux": "^7.2.4",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "tailwindcss": "^2.2.7"
  }
}
